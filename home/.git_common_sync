#!/usr/bin/env bash

git config --global user.name credwards27
git config --global user.email credwards27@users.noreply.github.com

git config --global core.excludesfile ~/.gitignore_global
git config --global push.default simple
git config --global color.ui true
git config --global rebase.autosquash true

# Aliases

git config --global alias.amend "commit --amend"
git config --global alias.commend "commit --amend --no-edit"
git config --global alias.it \
    "!git init && git commit -m 'Initial commit' --allow-empty"
git config --global alias.shorty "status --short --branch"
git config --global alias.st "!git shorty"
git config --global alias.clog "log --all --decorate --graph"

git config --global alias.glog "log --graph --abbrev-commit --decorate --all "\
"--format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - "\
"%an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n "\
"%C(white)%s%C(reset)'"
